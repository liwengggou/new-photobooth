{
  "name": "photobooth-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Photobooth app",
  "main": "lib/src/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:referral": "jest referral.test.ts --verbose"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "nodemailer": "^6.9.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "firebase-functions-test": "^3.0.0"
  },
  "private": true
}
